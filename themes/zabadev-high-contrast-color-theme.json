{
  "$schema": "vscode://schemas/color-theme",
  "name": "ZabaDev High Contrast – Neon Edition Improved",
  "type": "dark",
  "colors": {
    "editor.background": "#000000",
    "editor.foreground": "#FFFFFF",
    "editor.lineHighlightBackground": "#333300",       // línea resaltada muy visible
    "editorLineNumber.foreground": "#FFFF00",           // números de línea neón amarillo
    "editor.selectionBackground": "#FFFF0066",          // selección clásica
    "editor.selectionHighlightBackground": "#FFFF33AA", // selección resaltada
    "editorCursor.foreground": "#00FF00",
    "editorWhitespace.foreground": "#333333",

    "activityBar.background": "#000000",
    "activityBar.foreground": "#FFFF00",
    "activityBar.border": "#FF0000",
    "activityBar.activeBorder": "#FF3300",

    "sideBar.background": "#000000",
    "sideBar.foreground": "#FFFFFF",
    "sideBar.border": "#FF00FF",

    "statusBar.background": "#000000",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.border": "#00FFFF",

    "titleBar.activeBackground": "#000000",
    "titleBar.activeForeground": "#FFFFFF",

    "button.background": "#FFFF00",
    "button.foreground": "#000000",
    "button.hoverBackground": "#FFAA00",

    "terminal.background": "#000000",
    "terminal.foreground": "#FFFFFF",
    "terminal.ansiBlack": "#000000",
    "terminal.ansiRed": "#FF0000",
    "terminal.ansiGreen": "#00FF00",
    "terminal.ansiYellow": "#FFFF00",
    "terminal.ansiBlue": "#00FFFF",
    "terminal.ansiMagenta": "#FF00FF",
    "terminal.ansiCyan": "#00FFFF",
    "terminal.ansiWhite": "#FFFFFF",

    "editorError.foreground": "#FF0000",
    "editorWarning.foreground": "#FFAA00",
    "editorInfo.foreground": "#00FFFF"
  },
  "tokenColors": [
    {
      "scope": ["comment", "punctuation.definition.comment", "string.comment"],
      "settings": {"foreground": "#777777", "fontStyle": "italic"}
    },
    {
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {"foreground": "#FF0000", "fontStyle": "bold"}  // rojo neón
    },
    {
      "scope": ["keyword.operator", "keyword.control", "constant.language"],
      "settings": {"foreground": "#FFAA00"}  // amarillo neón
    },
    {
      "scope": ["variable", "entity.name.variable", "variable.parameter"],
      "settings": {"foreground": "#00FF00"}  // verde neón
    },
    {
      "scope": ["variable.other.readwrite", "variable.other.constant"],
      "settings": {"foreground": "#FFFF00"}  // amarillo brillante
    },
    {
      "scope": ["constant.numeric", "number", "constant.character.escape"],
      "settings": {"foreground": "#FF3300"}  // rojo neón
    },
    {
      "scope": ["string", "constant.other.symbol", "string.quoted"],
      "settings": {"foreground": "#00FFFF"}  // cian neón
    },
    {
      "scope": ["function", "entity.name.function", "support.function", "meta.function-call"],
      "settings": {"foreground": "#FFAA00", "fontStyle": "bold"} // amarillo neón
    },
    {
      "scope": ["method", "entity.name.method"],
      "settings": {"foreground": "#FF0000"}  // rojo neón
    },
    {
      "scope": ["class", "entity.name.type.class", "support.class", "type"],
      "settings": {"foreground": "#FFFF00"}  // amarillo brillante
    },
    {
      "scope": ["interface", "entity.name.interface"],
      "settings": {"foreground": "#00FFFF"}  // cian
    },
    {
      "scope": ["namespace", "entity.name.namespace"],
      "settings": {"foreground": "#00AAFF"}  // azul neón
    },
    {
      "scope": ["property", "variable.other.property", "attribute.name"],
      "settings": {"foreground": "#FFAA00"}  // amarillo
    },
    {
      "scope": ["decorator", "meta.decorator", "annotation"],
      "settings": {"foreground": "#FF3300"}  // rojo neón
    },
    {
      "scope": ["punctuation", "meta.delimiter", "meta.brace"],
      "settings": {"foreground": "#FFFFFF"}
    },
    {
      "scope": ["invalid", "invalid.deprecated"],
      "settings": {"foreground": "#FF0000", "fontStyle": "bold underline"}
    },
    {
      "scope": ["boolean", "constant.boolean"],
      "settings": {"foreground": "#FFAA00"}  // amarillo
    },
    {
      "scope": ["conditional", "keyword.control.conditional"],
      "settings": {"foreground": "#00FFFF", "fontStyle": "bold"}  // cian neón
    },
    {
      "scope": ["loop", "keyword.control.loop"],
      "settings": {"foreground": "#FF0000", "fontStyle": "bold"}  // rojo neón
    },
    {
      "scope": ["tag", "entity.name.tag", "markup.heading"],
      "settings": {"foreground": "#FFFF00"}  // amarillo neón
    },
    {
      "scope": ["attr-name", "entity.other.attribute-name"],
      "settings": {"foreground": "#00FF00"}  // verde neón
    },
    {
      "scope": ["markup.bold", "markup.italic"],
      "settings": {"foreground": "#FFFF00", "fontStyle": "bold"} // amarillo
    }
  ]
}
